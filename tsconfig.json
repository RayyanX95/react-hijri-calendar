{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "src",
    "demo",
    "jest.config.cjs",
    "rollup.config.mjs",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules"
    // "**/*.test.ts",
    // "**/*.test.tsx"
  ]
}
